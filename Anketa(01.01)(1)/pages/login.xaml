<Page x:Class="Anketa_01._01__1_.pages.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Anketa_01._01__1_.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="login">
    <Grid>
        <StackPanel>
            <GroupBox Header="Введите регистрационные данные">
            <StackPanel>
                    <GroupBox Header="Введите логин" >
                    <TextBox x:Name="txtLogin"/>
                </GroupBox>
                    <GroupBox Header="Введите пароль">
                    <PasswordBox x:Name="txtPassword"/>
                </GroupBox>
              </StackPanel>
            </GroupBox>
            <Button x:Name="btnLogin" Content="Авторизоваться" Margin="300 5 300 5" Click="btnLogin_Click" IsDefault="True" Background="{x:Null}" Foreground="#FFF729B6" />
            <Button x:Name="btnReg" Content="Зарегистрироваться" Margin="300 5 300 5" Click="btnReg_Click" Foreground="#FFF729B6" Background="{x:Null}" />
        </StackPanel>
    </Grid>
</Page>
