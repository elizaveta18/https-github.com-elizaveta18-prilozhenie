<Page x:Class="Anketa_01._01__1_.pages.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Anketa_01._01__1_.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="login">
    <Grid>
        <GroupBox Header="Введите регистрационные данные">
            <StackPanel>
                <GroupBox Header="Введите логин">
                    <TextBox x:Name="txtLogin"/>
                </GroupBox>
                <GroupBox Header="Введите пароль">
                    <PasswordBox x:Name="txtPassword"/>
                </GroupBox>
                <Button Content="Авторизоваться" Name="btnLogin"  Margin="20 5 600 1" Click="btnLogin_Click" IsDefault="True" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFF729B6"/>
                <!--Свойство IsDefault активирует кнопку при нажатии enter, IsCancel - при нажатии Escape-->
                <Button Content="Зарегистрироваться" Name="btnReg" Margin="20 5 600 1" Click="btnReg_Click" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFF729B6"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Page>
